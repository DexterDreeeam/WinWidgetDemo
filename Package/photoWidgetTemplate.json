{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "body": [
        {
            "type": "Carousel",
            "rtl": false,
            "pages": [
                {
                    "type": "CarouselPage",
                    "rtl": false,
                    "items": [
                        {
                            "type": "Image",
                            "url": "${i1}",
                            "altText": "${t1}",
                            "spacing": "None",
                            "horizontalAlignment": "Center",
                            "size": "Stretch"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "https://adoption.microsoft.com/wp-content/uploads/2023/09/icon-copilot.svg",
                                            "altText": "Icon 1",
                                            "spacing": "Small",
                                            "size": "Small"
                                        }
                                    ],
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${desc1}",
                                            "horizontalAlignment": "Left",
                                            "weight": "Bolder",
                                            "spacing": "Small",
                                            "wrap": true
                                        }
                                    ],
                                    "horizontalAlignment": "Center",
                                    "verticalContentAlignment": "Center"
                                }
                            ],
                            "spacing": "Small",
                            "horizontalAlignment": "Left"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "rtl": false,
                    "items": [
                        {
                            "type": "Image",
                            "url": "${i2}",
                            "altText": "${t2}",
                            "horizontalAlignment": "Center",
                            "size": "Stretch"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "https://adoption.microsoft.com/wp-content/uploads/2023/09/icon-copilot.svg",
                                            "altText": "Icon 1",
                                            "spacing": "Small",
                                            "size": "Small"
                                        }
                                    ],
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${desc2}",
                                            "horizontalAlignment": "Left",
                                            "weight": "Bolder",
                                            "spacing": "Small",
                                            "wrap": true
                                        }
                                    ],
                                    "horizontalAlignment": "Center",
                                    "verticalContentAlignment": "Center"
                                }
                            ],
                            "spacing": "Small",
                            "horizontalAlignment": "Left"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "rtl": false,
                    "items": [
                        {
                            "type": "Image",
                            "url": "${i3}",
                            "altText": "${t3}",
                            "horizontalAlignment": "Center",
                            "size": "Stretch"
                        },
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "https://adoption.microsoft.com/wp-content/uploads/2023/09/icon-copilot.svg",
                                            "altText": "Icon 1",
                                            "spacing": "Small",
                                            "size": "Small"
                                        }
                                    ],
                                    "verticalContentAlignment": "Center"
                                },
                                {
                                    "type": "Column",
                                    "width": "stretch",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${desc3}",
                                            "horizontalAlignment": "Left",
                                            "weight": "Bolder",
                                            "spacing": "Small",
                                            "wrap": true
                                        }
                                    ],
                                    "horizontalAlignment": "Center",
                                    "verticalContentAlignment": "Center"
                                }
                            ],
                            "spacing": "Small",
                            "horizontalAlignment": "Left"
                        }
                    ]
                }
            ],
            "backgroundImage": {
                "fillMode": "RepeatHorizontally"
            },
            "timer": 2000,
            "heightInPixels": "230px"
        }
    ]
}