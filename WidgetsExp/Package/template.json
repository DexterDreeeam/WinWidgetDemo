{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "text": "We generate a random number ${number}"
        },
        {
            "text": "Current Size is Small",
            "type": "TextBlock",
            "$when": "${$host.widgetSize==\"small\"}"
        },
        {
            "text": "Current Size is Medium",
            "type": "TextBlock",
            "$when": "${$host.widgetSize==\"medium\"}"
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "Re-gen",
            "verb": "rand"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5"
}